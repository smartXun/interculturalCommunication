.drawer_box .btn {  
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #000;  
  color: #fff;  
}
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
.drawer_box {  
  width: 560rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 1001;  
  background: #FAFAFA;  
  border-radius: 3px;  
}  
.drawer_box .drawer_title{  
  padding: 30rpx 0 0 30rpx;  
}  
.drawer_box .cancle_btn,.drawer_box .sure_btn{  
  height: 80rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 36rpx;
  line-height: 80rpx;
}
.drawer_box .cancle_btn{
  background: #222222;
}
.drawer_box .sure_btn{
  background: #4C98E1;
}
.drawer_box input{  
    font: 12px "microsoft yahei";  
    background: #fff;  
    border: solid 1px #DBDBDB;
    margin: 18rpx 29rpx 40rpx 33rpx;
    color:#000 ;  
    padding-left: 20rpx;
} 