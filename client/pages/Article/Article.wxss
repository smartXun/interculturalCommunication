.title_header{
  background: #FFFFFF;
  padding: 50rpx 30rpx 33rpx 30rpx;
}
.title_header .icon{
  width: 18rpx;
  height: 18rpx;
  margin-right: 8rpx;
}
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  overflow: hidden;  
} 
.translation{
  background: #4C98E1;
  color: #FFFFFF;
  width: 130rpx;
  height: 64rpx;
  line-height:64rpx;
  text-align:center;
  z-index:1001;
}
.language{
  background: #4C98E1;
  color: #FFFFFF;
  height: 60rpx;
  line-height: 60rpx;
  width: 220rpx;
  text-align:center;
}


.content_wrapper{
  padding: 40rpx 0 1rpx 0;
  background: #FFFFFF;
}
.content_wrapper .text_view{
  margin-bottom: 40rpx;
}
.content_wrapper text{
  margin-left: 30rpx;
  max-width:690rpx;
  word-wrap:break-word;
}
.content_wrapper video{
  max-width:690rpx;
}
.contentImg{
  width: 750rpx;
}

.actionBar{
  background:#4C98E1;
  color:#FFF;
}
.actionBar view{
  height:80rpx;
  text-align:center;
}
.actionBar image{
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
}