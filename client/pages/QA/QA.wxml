<view class='header'>
  <view class='header-top blue flex-h'>
    <view class='search flex1 flex-h'>
    <image class='search_icon' src='../../assets/icon/search@3x.png'></image>
    <input class='flex1 fz-12' bindinput="searchKeyInput" type="text" placeholder="Search" />
    </view>
    <image bindtap="newqa" class='pen' src='../../assets/icon/pen.png'></image>
  </view>
</view>

<block wx:for="{{list}}" wx:key="id">
  <view class='flex-v qalist' style='background: #FFFFFF;margin: 10rpx 0;' bindtap='toAnsList' data-id='{{item.q_id}}'>
    <text class='qatitle fz-14'>{{item.que}}</text>
    <text class='qades fz-12' decode='{{true}}'>{{item.content}}</text>
    <view class='flex-h fullWidth' style='margin-top:20rpx;'>
      <view class='flex1 flex'>
        <block wx:for="{{item.userPhotos}}" wx:key="{{index}}">
          <image class='userIcon' src="{{item}}"></image>
        </block>
        <text wx:if="{{item.userPhotos.length>3}}" class='blue fz-12' style='margin:0 0 20rpx 20rpx'>+{{item.comment_num}}</text>
      </view>
      <view class='flex'>
        <image class='timeIcon' src='../../assets/icon/Clock@3x.png'></image>
        <text class='timeText fz-12 g9'>{{item.create_time}}</text>
      </view>
    </view>
  </view>
</block>